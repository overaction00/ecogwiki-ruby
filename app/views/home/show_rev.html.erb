<header>
    <h1>Revision History of <%= @wikipage.title %></h1>
</header>
<table class="pagelist revisions">
    <thead><tr>
        <th class="modified">Modified</th>
        <th class="comment">Comment</th>
    </tr></thead>
    <tbody>
    <% if @revisions.nil? %>
    <tr><td colspan="2">(no revisions)</td></tr>
    <% end %>
    <tr class="page">
      <td class="modified"><time datetime="<%= @wikipage.created_at %>"><%= @wikipage.created_at %></time></td>
      <td>
        <span class="modifier"><a href="<%= page_modifier(@wikipage) %>"><%= page_modifier(@wikipage) %></a></span>
        <br>
        <a class="caret-target comment" href="/<%= @wikipage.title %>?rev=<%= @wikipage.revision %>" rel="nofollow">
          <% if @wikipage.comment.nil? %>
              No comment
          <% else %>
              <%= @wikipage.comment %>
          <% end %>
        </a>
      </td>
      <td>(<a href="<%= @wikipage.title %>?rev=<%= @wikipage.revision %>">rev. <%= @wikipage.revision %></a>)</td>
    </tr>
    <% @revisions.each do |revision| %>
    <tr class="page">
        <td class="modified"><time datetime="<%= revision.created_at %>"><%= revision.created_at %></time></td>
        <td>
            <span class="modifier"><a href="<%= page_modifier(@wikipage) %>"><%= page_modifier(@wikipage) %></span>
            <br>
            <a class="caret-target comment" href="/<%= revision.title %>?rev=<%= revision.revision %>" rel="nofollow">
            <% if revision.comment.nil? %>
                No comment
            <% else %>
                <%= revision.comment %>
            <% end %>
            </a>
        </td>
        <td>(<a href="<%= @wikipage.title %>?rev=<%= revision.revision %>">rev. <%= revision.revision %></a>)</td>
    </tr>
    <% end %>

  </tbody>
</table>